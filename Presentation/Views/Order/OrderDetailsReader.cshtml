
@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <main>
        <div style="margin-top:15px;margin-bottom: 15px;background-color:#fff; border-radius: 5px; width:45%; height:10%;" class="col-lg-6;">
            <div class="col-lg-12">
                <h4 class="dash-title">Filter by </h4>
            </div>
            <div class="col-lg-12" style="margin-bottom: 10px;">
                <div class="col-lg-3">
                    <label>Order Number</label>
                </div>
                <div class="col-lg-4">
                    <input class="form-control" id="txtOrderNumberFilter" />
                </div>
            </div>
            <div class="col-lg-12" style="margin-bottom: 10px;">
                <div class="col-lg-3">
                    <label>Order Type</label>
                </div>
                <div class="col-lg-4">
                    <select id="ddlOrderTypeFilter" class="form-control"></select>
                </div>
            </div>
            <div class="col-lg-12" style="margin-bottom: 10px;">
                <div class="col-lg-3">
                    <label>From Date</label>
                </div>
                <div class="col-lg-4">
                    <input id="txtFromDateFilter" class="form-control" type="date" />
                </div>
            </div>
            <div class="col-lg-12" style="margin-bottom: 10px;">
                <div class="col-lg-3">
                    <label>To Date</label>
                </div>
                <div class="col-lg-4">
                    <input id="txtToDateFilter" class="form-control" type="date" />
                </div>
            </div>
            <div class="col-lg-12" style="margin-bottom: 10px;">
                <div class="col-lg-3">
                </div>
                <div class="col-lg-4">
                    <a class="btn btn-sm btn-warning" onclick="filter()"><span class="ti-filter"></span> Filter</a>
                </div>
            </div>
        </div>
        <div style="margin-bottom: 15px;">
            <h2 class="dash-title">View Orders </h2>
        </div>

        <table id="tblOrders" class="table table-striped table-bordered" style="width: 100%; font-size: smaller;">
            <thead style="font-size: x-small;">
                <tr>
                    <th></th>
                    <th>Order Number</th>
                    <th>Order Type</th>
                    <th>Order Status</th>
                    <th>Customer Name</th>
                    <th>Create Date</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </main>
</div>
@section scripts {
    <script src="~/Scripts/Application_Scripts/Order/OrderDetailsReader.js"></script>
}

